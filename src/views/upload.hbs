<h1 class="text-3xl font-bold mb-6 text-center">Upload Screenshot</h1>
<div id="upload-screenshot-form-container"
  class="bg-white rounded-xl shadow-lg p-6 space-y-4 max-w-xl mx-auto mt-6">
  <form id="upload-screenshot-form" action="/api/screenshots" enctype="multipart/form-data" method="post"
    class="space-y-4">
    <div class="relative">

      <input id="title-search" type="text" placeholder="Anime/Manga Title"
        class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:ring-2 focus:ring-indigo-400" required>

      <div id="title-results" 
        class="absolute left-0 right-0 mt-1 bg-white rounded-xl max-h-60 overflow-y-auto z-50 hidden"></div>
    
    </div>
    
    <input id="anilist-id" type="hidden" name="anilist_id"
      class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:ring-2 focus:ring-indigo-400">
    
    <textarea name="sentence" placeholder="Sentence" 
      class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:ring-2 focus:ring-indigo-400 h-24 mb-1" required></textarea>
    
    <input type="text" name="translation" placeholder="Sentence Translation (Optional)"
      class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:ring-2 focus:ring-indigo-400 mb-1">
    
    <label class="block">
      <span class="text-slate-700">Image Upload:</span>
      <input type="file" name="image" accept="image/*"
        class="mt-1 w-full block text-slate-700 file:mr-4 file:py-2 file:px-4 
              file:rounded-lg file:border-0 file:text-white 
              file:bg-indigo-600 hover:file:bg-indigo-700 transition" required>
    </label>

    <button type="submit" class="px-4 py-2 rounded-lg shadow bg-indigo-600 text-white hover:bg-indigo-700 transition"
      >Save</button>
  </form>
</div>

<div id="upload-result"></div>

<div id="upload-vocab-form-container" class="mt-12" style="display: none">
  <h2 class="text-2xl font-semibold mb-4 text-center">Add Vocab Entry</h2>
  <form id="upload-vocab-form" action="/api/vocab" enctype="multipart/form-data" method="post" class="space-y-4">
    <input type="text" name="word" placeholder="Word"
      class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:ring-2 focus:ring-indigo-400" required>
    <input type="text" name="reading" placeholder="Reading (Optional)"
      class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:ring-2 focus:ring-indigo-400">
    <input type="text" name="meaning" placeholder="Meaning"
      class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:ring-2 focus:ring-indigo-400" required>
    <select name="partOfSpeech"
      class="w-full rounded-lg border border-slate-300 px-3 py-2 bg-white shadow-sm focus:ring-2 focus:ring-indigo-400" required>
      <option value="noun">Noun/名詞</option>
      <option value="verb">Verb/動詞</option>
      <option value="i-adjective">i-Adjective/形容詞</option>
      <option value="na-adjective">na-Adjective/形容動詞</option>
      <option value="adverb">Adverb/副詞</option>
      <option value="pronoun">Pronoun/代名詞</option>
      <option value="particle">Particle/助詞</option>
      <option value="conjunction">Conjunction/接続詞</option>
      <option value="interjection">Interjection/感動詞</option>
      <option value="auxiliary-verb">Auxiliary Verb/助動詞</option>
      <option value="prenominal">Prenominal/連体詞</option>
      <option value="prefix">Prefix/接頭辞</option>
      <option value="suffix">Suffix/接尾辞</option>
      <option value="other">Other/その他</option>
    </select>
    <textarea name="notes" placeholder="Notes"
      class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:ring-2 focus:ring-indigo-400 h-24"></textarea>

    <button type="submit" class="px-4 py-2 rounded-lg shadow bg-indigo-600 text-white hover:bg-indigo-700 transition">
      Add</button>
  </form>

  <a href="/my-cards/upload" 
    class="mt-6 inline-block px-4 py-2 rounded-lg shadow bg-slate-200 text-slate-800 hover:bg-slate-300 transition">
    Upload Another Screenshot
  </a>
</div>

<script type="module" src="/js/pages/upload.js"></script>